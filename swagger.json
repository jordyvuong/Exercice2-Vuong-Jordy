{
  "openapi": "3.0.0",
  "info": {
    "title": "Task Management API",
    "version": "1.0.0",
    "description": "API REST pour gérer des tâches avec PostgreSQL"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Serveur de développement"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Racine de l'API",
        "description": "Retourne les informations de bienvenue et les endpoints disponibles",
        "tags": ["Root"],
        "responses": {
          "200": {
            "description": "Message de bienvenue avec la liste des endpoints",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Bienvenue"
                    },
                    "endpoints": {
                      "type": "object",
                      "properties": {
                        "GET /tasks": {
                          "type": "string",
                          "example": "Afficher toutes les tâches"
                        },
                        "GET /tasks/:id": {
                          "type": "string",
                          "example": "Afficher une tâche spécifique"
                        },
                        "POST /tasks": {
                          "type": "string",
                          "example": "Ajouter une nouvelle tâche (body: { title })"
                        },
                        "DELETE /tasks/:id": {
                          "type": "string",
                          "example": "Supprimer une tâche"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tasks": {
      "get": {
        "summary": "Récupérer toutes les tâches",
        "description": "Retourne la liste de toutes les tâches triées par date de création (du plus récent au plus ancien)",
        "tags": ["Tasks"],
        "responses": {
          "200": {
            "description": "Liste des tâches récupérée avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Task"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erreur serveur",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer une nouvelle tâche",
        "description": "Ajoute une nouvelle tâche à la base de données",
        "tags": ["Tasks"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title"],
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Acheter du lait",
                    "description": "Titre de la tâche"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tâche créée avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/Task"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requête invalide - titre manquant",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Erreur serveur",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/tasks/{id}": {
      "get": {
        "summary": "Récupérer une tâche par ID",
        "description": "Retourne une tâche spécifique en fonction de son ID",
        "tags": ["Tasks"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID de la tâche",
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tâche récupérée avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/Task"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Tâche non trouvée",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Erreur serveur",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Supprimer une tâche",
        "description": "Supprime une tâche de la base de données en fonction de son ID",
        "tags": ["Tasks"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID de la tâche à supprimer",
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tâche supprimée avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Task deleted"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Task"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Tâche non trouvée",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Erreur serveur",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Task": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID unique de la tâche",
            "example": 1
          },
          "title": {
            "type": "string",
            "description": "Titre de la tâche",
            "example": "Acheter du lait"
          },
          "completed": {
            "type": "boolean",
            "description": "Statut de la tâche",
            "example": false
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Date de création de la tâche",
            "example": "2024-11-06T14:30:00.000Z"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "error": {
            "type": "string",
            "example": "Error message"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Root",
      "description": "Endpoint racine de l'API"
    },
    {
      "name": "Tasks",
      "description": "Opérations CRUD pour la gestion des tâches"
    }
  ]
}
